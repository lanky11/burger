
<h1>Eat Da Burgers!</h1>

<h2>Add a burger</h2>

<form action="/burgers/create" method="POST">
  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" name="burger_name" class="form-control" value="" id="enter_text">
    <button type="submit" class="btn btn-primary">Add burger</button>
  </div>
</form>

<h2>Burgers to be devoured!</h2>

{{#each data}}
  {{#unless this.devoured}}
    <div>
      {{this.id}}. {{this.burger_name}}
      <form method="POST" actions="/burgers/update?_method=PUT">
        <input type="hidden" name="burger_id" type="text" value={{this.id}}>
        <button type="submit" class="btn btn-default">Devoure!</button>
      </form>
    </div>
  {{/unless}}
{{/each}}


<h2>Burgers that have been devoured!</h2>

{{#each data}}
  {{#if this.devoured}}
    {{this.id}}. {{this.burger_name}}
  {{/if}}
{{/each}}




