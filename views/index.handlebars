
<h1>Eat Da Burgers!</h1>

<h2>Burgers to be devoured!</h2>

  {{#each data}}
    {{#unless this.devoured}}
      <div>
        {{this.id}}. {{this.burger_name}}
        <form method="POST" actions="/burgers/update?_method=PUT">
        <input type="hidden" name="burger_id" type="text" value={{this.id}}>
        <button type="submit" class="btn btn-default">Devoure!</button>
      </form>
      </div>
      
    {{/unless}}
  {{/each}}


<h2>Burgers that are devoured!</h2>
<ul>
  {{!--hbsObject--}}
  {{#each burgers}}
    {{#if devoured}}
    {{this.burger_name}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="sleep">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> devoured!<br>
    <input type="radio" name="devoured" value="0"> EAT
  </div>

  <button type="submit">Add burger</button>
</form>
